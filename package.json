{
  "name": "juego-unic",
  "private": true,
  "version": "1.0.4",
  "description": "The Infinite Garden - Professional Edition. A procedural cyber-zen simulation.",
  "author": "BitBloom Dev",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:linux": "vite build && electron-builder --linux AppImage",
    "build:win": "vite build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.infinitegarden.game",
    "productName": "The Infinite Garden",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.js"
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}